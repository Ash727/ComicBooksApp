
@model ComicBooks.Models.ComicBook[]
@{
    ViewBag.Title = "Comic Books";
}
<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col">
        <form action="/" method="post">
            <div class="SearchBar">
                <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg">
                <button type="submit" class="btn btn-outline-primary">Search</button>
            </div>
        </form>
    </div>
</div>


<div class="row">
    @foreach (var comic in Model)
    {
        <div class="col-md-4">
            <h4>@Html.ActionLink(comic.SeriesTitle, "Detail", new { id = comic.Id }) </h4>
            <a href="@Url.Action("Detail", new { id = comic.Id})">
                <img src="@comic.ImageLink"
                     alt="@comic.SeriesTitle #@comic.issueNumber"
                     class="img-responsive" />
            </a>
        </div>
    }
</div>

